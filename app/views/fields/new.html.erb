<div class="contain">
  <div class="container">
    <div class="d-flex align-items-start flex-column justify-content-center">
      <h2 class="mt-3 mb-3">Nouvelle parcelle</h2>
      <%= simple_form_for @field do |f| %>
        <%= f.label "Nom" %>
        <%= f.text_field :name, class:"mt-3 ml-2" %>
        <%= f.submit "Valider", class: "validate-btn" %>
      <% end %>
    </div>

  </div>
</div>
