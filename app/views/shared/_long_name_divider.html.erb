<%# locals to define --> name of the variable and length to not oversive %>
<% if name.to_s.length > length %>
  <% half = name.to_s.length / 2 + 1 %>
  <%= name.to_s.first(half) %>
    <% if name.to_s.length.odd? %>
      <%= name.to_s.last( half + 1 ) %>
    <% else %>
      <%= name.to_s.last( half ) %>
    <% end %>
<% else %>
  <%= name.to_s %>
<% end %>
